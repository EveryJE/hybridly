{
  "private": true,
  "version": "0.0.1-dev.1",
  "scripts": {
		"release": "bumpp package.json packages/*/package.json",
    "build": "pnpm -r build",
		"test": "vitest --run",
		"lint": "eslint \"**/*.{ts,vue,mjs}\"",
		"lint:fix": "eslint \"**/*.{ts,vue,mjs}\" --fix",
    "docs:dev": "vitepress dev docs",
    "docs:build": "vitepress build docs",
    "docs:serve": "vitepress serve docs",
		"ci": "pnpm run lint && pnpm run build && pnpm run test"
  },
  "devDependencies": {
    "@hybridly/core": "workspace:*",
    "@hybridly/vite": "workspace:*",
    "@hybridly/vue": "workspace:*",
    "@innocenzi/eslint-config": "^0.12.0",
    "@types/debug": "^4.1.7",
    "@types/throttle-debounce": "^5.0.0",
    "@vitest/ui": "^0.24.1",
    "bumpp": "^8.2.1",
    "eslint": "^8.25.0",
    "happy-dom": "^7.5.1",
    "hybridly": "workspace:*",
    "msw": "0.47.4",
    "type-fest": "^3.1.0",
    "typescript": "^4.8.4",
    "unbuild": "0.8.11",
    "unocss": "^0.45.29",
    "vite": "^3.1.7",
    "vitepress": "1.0.0-alpha.19",
    "vitest": "^0.24.1",
    "vue": "^3.2.40"
  },
  "pnpm": {
    "overrides": {
      "unbuild": "0.6.9"
    },
    "peerDependencyRules": {
      "ignoreMissing": [
        "@algolia/client-search",
        "react",
        "react-dom",
        "@types/react"
      ]
    }
  }
}
