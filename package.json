{
  "private": true,
  "scripts": {
    "build": "pnpm -r build",
    "dev": "pnpm stub",
    "lint": "eslint \"**/*.{ts,vue,mjs}\"",
    "lint:fix": "pnpm lint -- --fix",
    "release": "bumpp package.json packages/*/package.json --commit --push --tag",
    "stub": "pnpm -r --parallel run stub",
    "test": "pnpm run test:vitest && pnpm run test:pest",
    "test:vitest": "vitest test --run",
    "test:pest": "composer test"
  },
  "devDependencies": {
    "@innocenzi/eslint-config": "^0.12.0",
    "@hybridly/core": "workspace:*",
    "@hybridly/vite": "workspace:*",
    "@hybridly/vue": "workspace:*",
    "@types/debug": "^4.1.7",
    "@vitest/ui": "^0.18.1",
    "bumpp": "^8.2.1",
    "eslint": "^8.20.0",
    "happy-dom": "^6.0.4",
    "hybridly": "workspace:*",
    "msw": "0.44.1",
    "type-fest": "^2.16.0",
    "typescript": "^4.7.4",
    "unbuild": "0.7.4",
    "vite": "^3.0.2",
    "vitest": "^0.18.1"
  },
  "pnpm": {
    "overrides": {
      "unbuild": "0.6.9"
    }
  }
}
