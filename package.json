{
  "private": true,
  "scripts": {
    "build": "pnpm -r build",
    "dev": "pnpm stub",
    "lint": "eslint \"**/*.{ts,vue,mjs}\"",
    "lint:fix": "pnpm lint -- --fix",
    "release": "bumpp package.json packages/*/package.json --commit --push --tag",
    "stub": "pnpm -r --parallel run stub",
    "test": "pnpm run test:vitest && pnpm run test:pest",
    "test:vitest": "vitest test --run",
    "test:pest": "composer test"
  },
  "devDependencies": {
    "@innocenzi/eslint-config": "^0.11.0",
    "@sleightful/core": "workspace:*",
    "@sleightful/vite": "workspace:*",
    "@sleightful/vue": "workspace:*",
    "@types/debug": "^4.1.7",
    "@vitest/ui": "^0.15.1",
    "bumpp": "^8.2.0",
    "eslint": "^8.17.0",
    "happy-dom": "^5.3.1",
    "msw": "^0.42.1",
    "sleightful": "workspace:*",
    "type-fest": "^2.13.1",
    "typescript": "^4.7.4",
    "unbuild": "^0.7.4",
    "vite": "^2.9.12",
    "vitest": "^0.15.1"
  },
  "pnpm": {
    "overrides": {
      "msw": "0.36.8",
      "unbuild": "0.6.9"
    }
  }
}
