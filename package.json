{
    "private": true,
    "version": "0.1.0",
    "scripts": {
        "release": "bumpp package.json packages/*/package.json --all --execute \"tsx build/bump-php-packages.ts\" --commit \"release: v\"",
        "build": "pnpm -r build",
        "test": "vitest --run",
        "test:all": "pnpm run test && composer test",
        "lint": "eslint \"**/*.{ts,vue,mjs}\"",
        "lint:fix": "eslint \"**/*.{ts,vue,mjs}\" --fix",
        "docs:dev": "vitepress dev docs",
        "docs:build": "vitepress build docs",
        "docs:serve": "vitepress serve docs",
        "ci": "pnpm run lint && pnpm run build && pnpm run test"
    },
    "packageManager": "pnpm@7.13.4",
    "devDependencies": {
        "@fontsource/rubik": "^4.5.14",
        "@hybridly/config": "workspace:*",
        "@hybridly/core": "workspace:*",
        "@hybridly/progress-plugin": "workspace:*",
        "@hybridly/utils": "workspace:*",
        "@hybridly/vite": "workspace:*",
        "@hybridly/vue": "workspace:*",
        "@innocenzi/eslint-config": "^0.19.1",
        "@types/debug": "^4.1.7",
        "@types/node": "^18.15.11",
        "@types/qs": "^6.9.7",
        "@types/throttle-debounce": "^5.0.0",
        "@vitest/ui": "^0.29.8",
        "axios": "^1.3.5",
        "bumpp": "^9.1.0",
        "eslint": "^8.37.0",
        "happy-dom": "^9.1.9",
        "hybridly": "workspace:*",
        "msw": "^1.2.1",
        "shiki": "^0.14.1",
        "shiki-processor": "^0.1.3",
        "tailwindcss": "^3.3.1",
        "tsx": "^3.12.6",
        "type-fest": "^3.8.0",
        "typescript": "^5.0.3",
        "unbuild": "1.2.0",
        "unocss": "^0.50.6",
        "vite": "^4.2.1",
        "vitepress": "1.0.0-alpha.65",
        "vitest": "^0.29.8",
        "vue": "^3.2.47"
    },
    "pnpm": {
        "overrides": {
            "unbuild": "0.8.11"
        },
        "peerDependencyRules": {
            "ignoreMissing": [
                "@algolia/client-search",
                "react",
                "react-dom",
                "@types/react"
            ]
        }
    }
}
